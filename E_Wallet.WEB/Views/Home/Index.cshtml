@model IEnumerable<E_Wallet.WEB.Models.AccountViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>МОЇ РАХУНКИ</h2>
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>`
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>   
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td><strong>
                @Html.ActionLink("Переглянути транзакції","ShowTransactions", new {id = item.Id })
                </strong>
            </td>
        </tr>
    }

</table>
<h2>@Html.ActionLink("Провести транзакцію","MakeTransaction")</h2>
